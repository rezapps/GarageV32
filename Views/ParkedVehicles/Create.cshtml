@model GarageV32.Models.ParkedVehicle

@{
    ViewData["Title"] = "Create";
}


<div class="lnks">
    <a asp-action="Index">Back to List</a>
</div>

<h4>Parked a Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNr" class="control-label"></label>
                <input asp-for="RegNr" class="form-control" />
                <span asp-validation-for="RegNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleTypeId" class="control-label"></label>
                <select asp-for="VehicleTypeId" class="form-control vType" asp-items="ViewBag.VehicleTypeId">
                    <option value="">-- Select a Type --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select asp-for="Color" asp-items="@ViewBag.Colors" class="form-control">
                    <option value="">-- Select a Color --</option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wheels" class="control-label"></label>
                <input asp-for="Wheels" class="form-control" />
                <span asp-validation-for="Wheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GarageZoneId" class="control-label"></label>
                <select asp-for="GarageZoneId" class="form-control" asp-items="ViewBag.GarageZoneId">
                    <option value="">-- Select a Zone --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SpotNumber" class="control-label"></label>
                <input asp-for="SpotNumber" class="form-control sn1" />
                <span asp-validation-for="SpotNumber" class="text-danger"></span>
            </div>
            <div class="form-group sn2">
                <label asp-for="SpotNumber2" class="control-label"></label>
                <input asp-for="SpotNumber2" class="form-control" />
                <span asp-validation-for="SpotNumber2" class="text-danger"></span>
            </div>
            <div class="form-group sn3">
                <label asp-for="SpotNumber3" class="control-label"></label>
                <input asp-for="SpotNumber3" class="form-control" />
                <span asp-validation-for="SpotNumber3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" class="form-control" asp-items="ViewBag.MemberId">
                    <option value="">-- Select a Member --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

