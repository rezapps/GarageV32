@model GarageV32.Models.InvoiceViewModel

@{
    ViewData["Title"] = "Invoice";
}

<h1>Invoice</h1>

<div>
    <h4>Vehicle Invoice Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Registration Number</dt>
        <dd class="col-sm-10">@Model.RegNr</dd>

        <dt class="col-sm-2">Member ID</dt>
        <dd class="col-sm-10">@Model.MemberId</dd>

        <dt class="col-sm-2">Entry Time</dt>
        <dd class="col-sm-10">@Model.EntryTime</dd>

        <dt class="col-sm-2">Exit Time</dt>
        <dd class="col-sm-10">@Model.ExitTime</dd>

        <dt class="col-sm-2">Total Minutes</dt>
        <dd class="col-sm-10">@Model.TotalMinutes.ToString("F2")</dd>

        <dt class="col-sm-2">Fee</dt>
        <dd class="col-sm-10">@Model.Fee.ToString("F2")</dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to Vehicle List</a>
</div>
